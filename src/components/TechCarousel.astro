---
// Carousel.astro
import CSharp from "../components/icons/CSharp.astro";
import Unity from "../components/icons/Unity.astro";
import React from "../components/icons/React.astro";
import Node from "../components/icons/Node.astro";
import JS from "../components/icons/JS.astro";
import Astre from "../components/icons/Astre.astro";
import Illustrator from "../components/icons/Illustrator.astro";
import Windows from "./icons/Windows.astro";
import Linux from "./icons/Linux.astro";
import Wordpress from "./icons/Wordpress.astro";
import Photoshop from "./icons/Photoshop.astro";
import AmazonWebServices from "./icons/AmazonWebServices.astro";
import Angular from "./icons/Angular.astro";

const logos = [
  { component: CSharp, alt: "C#" },
  { component: Unity, alt: "Unity" },
  { component: Node, alt: "Node.js" },
  { component: JS, alt: "JavaScript" },
  { component: Astre, alt: "Astro" },
  { component: Illustrator, alt: "Illustrator" },
  { component: Windows, alt: "Windows Sever" },
  { component: Linux, alt: "Linux Server" },
  { component: Wordpress, alt: "Wordpress" },
  { component: Photoshop, alt: "Photoshop" },
  { component: AmazonWebServices, alt: "AmazonWebServices" },
  { component: Angular, alt: "Angular" },
];
---

<div
  x-data=""
  x-init="$nextTick(() => {
        let ul = $refs.logos;
        ul.insertAdjacentHTML('afterend', ul.outerHTML);
        ul.nextSibling.setAttribute('aria-hidden', 'true');
    })"
  class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]"
>
  <ul
    x-ref="logos"
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
  >
    {
      logos.map((logo) => (
        <li>
          <logo.component class="size-10" alt={logo.alt} />
        </li>
      ))
    }
  </ul>
  <ul
    class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
    aria-hidden="true"
  >
    {
      logos.map((logo) => (
        <li>
          <logo.component class="size-10" alt={logo.alt} />
        </li>
      ))
    }
  </ul>
</div>
